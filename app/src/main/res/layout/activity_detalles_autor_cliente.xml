<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-libro"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalle.DetallesAutorClienteActivity">

    <TextView
        android:id="@+id/textViewLibrosEscritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="24dp"
        android:text="Libros destacados"
        android:textSize="24sp"
        android:textStyle="bold"
        app2:layout_constraintEnd_toEndOf="@+id/txtShowEcuatoriano"
        app2:layout_constraintTop_toBottomOf="@+id/textViewEcuatoriano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Autor"
        android:textSize="24sp"
        android:textStyle="bold"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:text="Nombre"
        android:textSize="18sp"
        app2:layout_constraintBottom_toBottomOf="@+id/txtShowNombreAutor"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="@+id/txtShowNombreAutor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Apellido"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/textViewNombre"
        app2:layout_constraintTop_toBottomOf="@+id/textViewNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNombre" />

    <TextView
        android:id="@+id/textViewFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Fecha de Nacimiento"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/textViewApellido"
        app2:layout_constraintTop_toBottomOf="@+id/textViewApellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewApellido" />

    <TextView
        android:id="@+id/textViewNumeroLibros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="NÃºmero de Libros"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/textViewFechaNacimiento"
        app2:layout_constraintTop_toBottomOf="@+id/textViewFechaNacimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFechaNacimiento" />

    <TextView
        android:id="@+id/textViewEcuatoriano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Es ecuatoriano?"
        android:textSize="18sp"
        app2:layout_constraintEnd_toStartOf="@+id/textViewLibrosEscritos"
        app2:layout_constraintStart_toStartOf="@+id/textViewLibrosEscritos"
        app2:layout_constraintTop_toBottomOf="@+id/textViewNumeroLibros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumeroLibros" />

    <TextView
        android:id="@+id/txtShowNombreAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="TextView"
        android:textSize="18sp"
        app2:layout_constraintStart_toEndOf="@+id/textViewLibro"
        app2:layout_constraintTop_toBottomOf="@+id/txtShowIdAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/textViewNombre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtShowApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/txtShowNombreAutor"
        app2:layout_constraintTop_toBottomOf="@+id/txtShowNombreAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/textViewApellido"
        app:layout_constraintTop_toBottomOf="@+id/txtShowNombreAutor" />

    <TextView
        android:id="@+id/txtShowFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/txtShowApellido"
        app2:layout_constraintTop_toBottomOf="@+id/txtShowApellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toEndOf="@+id/textViewFechaNacimiento"
        app:layout_constraintTop_toBottomOf="@+id/txtShowApellido" />

    <TextView
        android:id="@+id/txtShowNumeroLibros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/txtShowFechaNacimiento"
        app2:layout_constraintTop_toBottomOf="@+id/txtShowFechaNacimiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/textViewNumeroLibros"
        app:layout_constraintTop_toBottomOf="@+id/txtShowFechaNacimiento" />

    <TextView
        android:id="@+id/txtShowEcuatoriano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="18sp"
        app2:layout_constraintStart_toStartOf="@+id/txtShowNumeroLibros"
        app2:layout_constraintTop_toBottomOf="@+id/txtShowNumeroLibros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewEcuatoriano"
        app:layout_constraintTop_toBottomOf="@+id/txtShowNumeroLibros" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_libro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/textViewLibrosEscritos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLibrosEscritos" />

    <TextView
        android:id="@+id/txtShowIdAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="Id"
        app2:layout_constraintEnd_toEndOf="@+id/txtShowNombreAutor"
        app2:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>